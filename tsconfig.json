{
	"compilerOptions": {
		 "module": "commonjs",
		 "target": "es6",

		 "noImplicitAny": true,
		 "noUnusedLocals": true,
		 "noUnusedParameters": true,
		 "strictNullChecks": true,
		 "allowUnreachableCode": false,
		 "removeComments": true,
		 "preserveConstEnums": true,
		 "sourceMap": true,
		 "emitDecoratorMetadata": true,
		 "experimentalDecorators": true,

		 "baseUrl": ".",

		 "paths": {
		 }
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
